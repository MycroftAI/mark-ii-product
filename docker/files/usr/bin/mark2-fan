#
# Sets the fan speed from 0 (off) to 100 (max)
#
# Example: mark2-fan 50

import argparse
import subprocess

BUS_ID = 1
DEVICE_ADDRESS = 0x04
FAN_ID = 101

MAX_SPEED = 100
MIN_SPEED = 0

MIN_HARDWARE_VALUE = 0
MAX_HARDWARE_VALUE = 255


def main():
    """Main entry point"""
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "speed", type=int, default=50, help="Speed between 0 (off) and 100 (max)"
    )
    args = parser.parse_args()

    # Clamp speed and convert to hardware value
    speed = max(MIN_SPEED, min(MAX_SPEED, args.speed))
    hardware_value = int(
        MIN_HARDWARE_VALUE
        + (
            (MAX_HARDWARE_VALUE - MIN_HARDWARE_VALUE)
            * (speed / (MAX_SPEED - MIN_SPEED))
        )
    )

    set_command = [
        "i2cset",
        "-y",  # disable interactive mode
        "-a",  # allow access to LED device range
        str(BUS_ID),
        f"0x{DEVICE_ADDRESS:02x}",
        f"0x{FAN_ID:02x}",
        str(hardware_value),
        "i",  # block data
    ]

    subprocess.check_call(set_command)


if __name__ == "__main__":
    main()
